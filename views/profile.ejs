<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body
    class="min-h-screen bg-gradient-to-br from-emerald-50 via-white to-teal-50 flex items-center justify-center p-6"
  >
    <div
      class="w-full max-w-3xl bg-white/80 backdrop-blur-lg rounded-3xl shadow-xl overflow-hidden border border-gray-100"
    >
      <!-- Top Bar -->
      <div
        class="flex justify-between items-center px-6 py-4 bg-gradient-to-r from-teal-400 via-emerald-500 to-cyan-500"
      >
        <h1 class="text-xl font-semibold text-white">üåø My Profile</h1>
        <a
          href="/logout"
          class="text-sm text-white font-medium bg-gradient-to-r from-rose-400 to-red-600 px-4 py-1 rounded-full hover:opacity-90 transition"
        >
          Logout
        </a>
      </div>

      <div class="p-6">

        <!-- Profile Image -->
        <div class="flex justify-center mb-6">
          <div class="relative group w-28 h-28 rounded-full overflow-hidden border-4 border-teal-400 shadow-lg">
            <img
              src="/images/uploads/<%= user.profilepic %>"
              alt="Profile Picture"
              class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
            />

            <!-- Hover Overlay -->
            <a
              href="/profile/upload"
              class="absolute inset-0 bg-black/40 flex items-center justify-center opacity-0 group-hover:opacity-100 transition"
            >
              <span class="text-white text-sm font-medium bg-teal-500 px-3 py-1 rounded-full">
                Change
              </span>
            </a>
          </div>
        </div>

        <!-- Greeting -->
        <h2 class="text-2xl font-bold text-gray-700 mb-6 text-center">
          üëã Hello,
          <span
            class="bg-gradient-to-r from-teal-500 to-cyan-500 text-transparent bg-clip-text"
            ><%= user.name %></span
          >
        </h2>

        <!-- Create Post -->
        <div
          class="bg-gradient-to-r from-gray-50 to-emerald-50 border border-gray-200 rounded-2xl p-5 mb-8 shadow-md"
        >
          <h5 class="text-gray-600 mb-3 font-medium">Create a new post</h5>
          <form action="/post" method="post" class="space-y-4">
            <textarea
              name="content"
              placeholder="üåü What's on your mind today?"
              class="w-full p-4 border rounded-xl focus:outline-none focus:ring-2 focus:ring-teal-400 resize-none"
              rows="3"
            ></textarea>
            <button
              type="submit"
              class="w-full bg-gradient-to-r from-teal-500 via-emerald-500 to-cyan-500 hover:opacity-90 text-white font-medium py-2.5 rounded-xl transition"
            >
              ‚ûï Post
            </button>
          </form>
        </div>

        <!-- Posts -->
        <div>
          <h3 class="text-lg font-semibold text-gray-800 mb-4">
            üìå Your Posts
          </h3>
          <div class="space-y-5">
            <% user.posts.reverse().forEach(function(post){ %>
            <div
              class="p-5 border border-gray-200 rounded-2xl shadow-md bg-gradient-to-br from-white to-emerald-50 hover:shadow-xl transition"
            >
              <!-- User Info -->
              <div class="flex items-center space-x-3 mb-3">
                <div
                  class="w-10 h-10 rounded-full bg-gradient-to-r from-teal-500 to-cyan-500 flex items-center justify-center text-white font-semibold shadow-md"
                >
                  <%= user.username.charAt(0).toUpperCase() %>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-800">
                    <%= user.username %>
                  </h4>
                  <p class="text-xs text-gray-400">Just now</p>
                </div>
              </div>

              <!-- Post Content -->
              <p class="text-gray-700 mb-4 leading-relaxed">
                <%= post.content %>
              </p>

              <!-- Actions -->
              <small> <%= post.likes.length %> likes</small>
              <div class="flex space-x-6 text-sm font-medium items-center">
                <% let liked = post.likes.some(id => id.toString() ===
                user._id.toString()); %>

                <a
                  href="/like/<%= post._id %>"
                  class="group relative flex items-center space-x-2 transition duration-200"
                >
                  <% if (liked) { %>
                  <!-- Filled Heart -->
                  <span
                    class="text-2xl transform transition duration-200 group-hover:scale-125 text-red-500"
                    >‚ù§Ô∏è</span
                  >
                  <span class="hidden sm:inline text-red-500 font-medium"
                    >Unlike</span
                  >
                  <% } else { %>
                  <!-- Outline Heart -->
                  <span
                    class="text-2xl transform transition duration-200 group-hover:scale-125 text-gray-400"
                    >ü§ç</span
                  >
                  <span class="hidden sm:inline text-gray-500 font-medium"
                    >Like</span
                  >
                  <% } %>
                </a>

                <a
                  href="/edit/<%= post._id %>"
                  class="flex items-center space-x-1 text-gray-500 hover:text-emerald-500 transition"
                >
                  <span>‚úèÔ∏è</span> <span>Edit</span>
                </a>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
