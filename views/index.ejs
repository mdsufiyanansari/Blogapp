      notifyButton: { enable: true },

      // ‚úÖ Auto-prompt enable
      promptOptions: {
        slidedown: {
          prompts: [
            {
              type: "push",
              autoPrompt: true,
              text: {
                actionMessage: "Get updates from our Blog üöÄ",
                acceptButton: "Allow",
                cancelButton: "No Thanks",
              },
            },
          ],
        },
      },
    });

    console.log("üëâ OneSignal initialized!");

    // Permission ‡§ö‡•á‡§ï
    const isEnabled = await OneSignal.User.PushSubscription.optedIn;
    console.log("Push Enabled? ", isEnabled);

    // Player ID ‡§ö‡•á‡§ï
    const playerId = await OneSignal.User.PushSubscription.id;
    console.log("‚úÖ Player ID:", playerId);

