<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Account</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      body {
        background: url("https://media.istockphoto.com/id/528305500/photo/sunset-and-beach.jpg?s=170667a&w=0&k=20&c=_TlE08ugnyaEBXKGDmf0m1Hx6wwAR1iMtwDFNwdypqI=")
          no-repeat center center/cover;
      }
    </style>
  </head>
  <body class="flex items-center justify-center min-h-screen relative">
    <!-- Overlay -->
    <div
      class="absolute inset-0 bg-gradient-to-br from-indigo-900/60 via-purple-900/40 to-pink-900/60"
    ></div>

    <!-- Register Card -->
    <div
      class="relative w-full max-w-md bg-white/20 backdrop-blur-xl p-8 rounded-3xl shadow-2xl border border-white/30"
    >
      <!-- Heading -->
      <h2
        class="text-3xl font-extrabold text-center mb-6 bg-gradient-to-r from-indigo-400 via-purple-400 to-pink-400 text-transparent bg-clip-text drop-shadow"
      >
        Create Account
      </h2>

      <!-- Form -->
      <form action="/register" method="post" class="space-y-5">
        <!-- Full Name -->
        <div>
          <input
            type="text"
            placeholder="Full Name"
            name="name"
            class="w-full px-4 py-3 border border-white/40 bg-white/30 rounded-xl text-gray-800 placeholder-gray-600 focus:outline-none focus:ring-2 focus:ring-purple-400 shadow-sm"
            required
          />
        </div>

        <!-- Username -->
        <div>
          <input
            type="text"
            placeholder="Username"
            name="username"
            class="w-full px-4 py-3 border border-white/40 bg-white/30 rounded-xl text-gray-800 placeholder-gray-600 focus:outline-none focus:ring-2 focus:ring-purple-400 shadow-sm"
            required
          />
        </div>

        <!-- Email -->
        <div>
          <input
            type="email"
            placeholder="Email"
            name="email"
            class="w-full px-4 py-3 border border-white/40 bg-white/30 rounded-xl text-gray-800 placeholder-gray-600 focus:outline-none focus:ring-2 focus:ring-purple-400 shadow-sm"
            required
          />
        </div>

        <!-- Password -->
        <div>
          <input
            type="password"
            placeholder="Password"
            name="password"
            class="w-full px-4 py-3 border border-white/40 bg-white/30 rounded-xl text-gray-800 placeholder-gray-600 focus:outline-none focus:ring-2 focus:ring-purple-400 shadow-sm"
            required
          />
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full py-3 rounded-xl bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 text-white font-semibold shadow-lg hover:opacity-90 transition"
        >
          âœ¨ Create Account
        </button>
      </form>

      <!-- Login Link -->
      <p class="text-center text-white/90 text-sm mt-4">
        Already have an account?
        <a href="/login" class="text-pink-300 font-medium hover:underline"
          >Login</a
        >
      </p>
    </div>
  </body>
</html>
