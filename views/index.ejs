<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Create Account</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body {
      background: url("https://img.freepik.com/free-photo/office-desk-workspace-bright-color-yellow-background_169016-38713.jpg")
        no-repeat center center/cover;
    }
  </style>

  <!-- ‚úÖ OneSignal SDK v16 -->
  <script src="https://cdn.onesignal.com/sdks/web/v16/OneSignalSDK.page.js" defer></script>

  <script defer>
    window.OneSignalDeferred = window.OneSignalDeferred || [];
    OneSignalDeferred.push(async function(OneSignal) {
      console.log("üëâ SDK Loaded!");

      await OneSignal.init({
        appId: "e269da3f-455c-4609-9285-fe3efefbae18",
        notifyButton: { enable: true }
      });

      console.log("üëâ OneSignal initialized!");

      // ‚úÖ Auto permission popup
      const perm = await OneSignal.Notifications.requestPermission();
      console.log("User Permission:", perm);

      // ‚úÖ Player ID check
      OneSignal.User.PushSubscription.addEventListener("change", async (sub) => {
        if (sub.id) {
          console.log("‚úÖ Player ID:", sub.id);
        } else {
          console.log("‚ùå ‡§Ö‡§≠‡•Ä subscribe ‡§®‡§π‡•Ä‡§Ç ‡§π‡•Å‡§Ü");
        }
      });
    });
  </script>
</head>

<body class="flex items-center justify-center min-h-screen relative">
  <!-- Overlay -->
  <div class="absolute inset-0 bg-gradient-to-br from-indigo-900/60 via-purple-900/40 to-pink-900/60"></div>

  <!-- Register Card -->
  <div class="relative w-full max-w-md bg-white/20 backdrop-blur-xl p-8 rounded-3xl shadow-2xl border border-white/30">
    <h2 class="text-3xl font-extrabold text-center mb-6 bg-gradient-to-r from-indigo-400 via-purple-400 to-pink-400 text-transparent bg-clip-text drop-shadow">
      Create Account
    </h2>

    <!-- Form -->
    <form action="/register" method="post" class="space-y-5">
      <div>
        <input type="text" placeholder="Full Name" name="name"
          class="w-full px-4 py-3 border border-white/40 bg-white/30 rounded-xl text-gray-800 placeholder-gray-600 focus:outline-none focus:ring-2 focus:ring-purple-400 shadow-sm"
          required />
      </div>
      <div>
        <input type="text" placeholder="Username" name="username"
          class="w-full px-4 py-3 border border-white/40 bg-white/30 rounded-xl text-gray-800 placeholder-gray-600 focus:outline-none focus:ring-2 focus:ring-purple-400 shadow-sm"
          required />
      </div>
      <div>
        <input type="email" placeholder="Email" name="email"
          class="w-full px-4 py-3 border border-white/40 bg-white/30 rounded-xl text-gray-800 placeholder-gray-600 focus:outline-none focus:ring-2 focus:ring-purple-400 shadow-sm"
          required />
      </div>
      <div>
        <input type="password" placeholder="Password" name="password"
          class="w-full px-4 py-3 border border-white/40 bg-white/30 rounded-xl text-gray-800 placeholder-gray-600 focus:outline-none focus:ring-2 focus:ring-purple-400 shadow-sm"
          required />
      </div>
      <button type="submit"
        class="w-full py-3 rounded-xl bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 text-white font-semibold shadow-lg hover:opacity-90 transition">
        ‚ú® Create Account
      </button>
    </form>

    <p class="text-center text-white/90 text-sm mt-4">
      Already have an account?
      <a href="/login" class="text-pink-300 font-medium hover:underline">Login</a>
    </p>
  </div>
</body>
</html>
